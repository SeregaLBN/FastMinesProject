<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="mosaicSkillItem"
            type="fmg.android.app.model.items.MosaicSkillDataItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/image"
            android:contentDescription="@string/mosaic_group_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:imageBitmap="@{mosaicSkillItem.image}"
            app:layout_sizeToHeight="@{mosaicSkillItem.size}"
            app:layout_sizeToWidth="@{mosaicSkillItem.size}"
            tools:src="@android:drawable/progress_indeterminate_horizontal" />

        <TextView
            android:id="@+id/title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            android:layout_marginBottom="0px"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:textSize="15sp"
            android:text="@{mosaicSkillItem.title}"
            tools:text="Sklill level name" />

    </LinearLayout>


</layout>