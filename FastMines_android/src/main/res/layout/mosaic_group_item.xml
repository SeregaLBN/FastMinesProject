<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="mosaicGroupItem"
            type="fmg.android.app.model.items.MosaicGroupDataItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/image"
            android:contentDescription="@{mosaicGroupItem.contentDescription}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:imageBitmap="@{mosaicGroupItem.image}"
            app:layout_sizeToHeight="@{mosaicGroupItem.size}"
            app:layout_sizeToWidth="@{mosaicGroupItem.size}"
            tools:src="@android:drawable/progress_indeterminate_horizontal" />

        <TextView
            android:id="@+id/title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:textSize="15sp"
            android:text="@{mosaicGroupItem.title}"
            tools:text="Mosaic group title" />

    </LinearLayout>


</layout>