<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="mosaicItem"
            type="fmg.android.app.model.items.MosaicDataItem" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="0dp"
            android:padding="0dp">

            <ImageView
                android:id="@+id/image"
                android:contentDescription="@string/mosaic_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:imageBitmap="@{mosaicItem.image}"
                app:layout_sizeToHeight="@{mosaicItem.size}"
                app:layout_sizeToWidth="@{mosaicItem.size}"
                tools:src="@android:drawable/progress_indeterminate_horizontal" />

            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="@{mosaicItem.title}"
                tools:text="Mosaic title" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</layout>