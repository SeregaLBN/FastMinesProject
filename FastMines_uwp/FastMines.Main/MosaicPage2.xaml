<Page
    x:Class="fmg.MosaicPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fmg"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Background="Coral">

    <Grid x:Name="_contentRoot" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" >
        <canvas:CanvasSwapChainPanel x:Name="_canvasSwapChainPanel" 
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Height="{x:Bind MosaicController.WindowSize, Mode=OneWay, Converter={StaticResource SizeToHeightConverter}}"
                                     Width="{x:Bind  MosaicController.WindowSize, Mode=OneWay, Converter={StaticResource SizeToWidthConverter}}"
                                    />
    </Grid>
</Page>
