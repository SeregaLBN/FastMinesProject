<Page
    x:Class="Test.FastMines.Uwp.MosaicsImg.WBmp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.FastMines.Uwp.MosaicsImg.WBmp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Image VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Source="{x:Bind DemoImg1.Image, Mode=OneWay}"
               Height="{x:Bind DemoImg1.Height, Mode=OneWay}"
               Width="{x:Bind DemoImg1.Width, Mode=OneWay}"
               Margin="10,10,0,0" />

        <Image VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Source="{x:Bind DemoImg2.Image, Mode=OneWay}"
               Height="{x:Bind DemoImg2.Height, Mode=OneWay}"
               Width="{x:Bind DemoImg2.Width, Mode=OneWay}"
               Margin="10,0,0,10" />

        <Image HorizontalAlignment="Right"
               Source="{x:Bind DemoImg3.Image, Mode=OneWay}"
               Height="{x:Bind DemoImg3.Height, Mode=OneWay}"
               Width="{x:Bind DemoImg3.Width, Mode=OneWay}"
               Margin="0,0,10,0" />

    </Grid>
</Page>
