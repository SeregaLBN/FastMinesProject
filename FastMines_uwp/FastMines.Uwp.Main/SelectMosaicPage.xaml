<Page
    x:Class="fmg.SelectMosaicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fmg"
    xmlns:DataModel="using:fmg.DataModel.Items"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">


    <Page.Resources>
        <DataTemplate x:Key="TailTemplate" x:DataType="DataModel:MosaicDataItem">
            <StackPanel Margin="4,4,4,8">
                <canvas:CanvasControl DataContext="{x:Bind Entity, Mode=OneWay}"
                       Height="{x:Bind Size.Height, Mode=OneWay}"
                       Width="{x:Bind Size.Width, Mode=OneWay}"
                       Margin="8,0,8,8"
                       DataContextChanged="OnDataContextChangedCanvasControl"
                       Draw="OnDrawCanvasControl" />
                <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                           TextWrapping="Wrap"
                           Width="{x:Bind Size.Width, Mode=OneWay}"
                           Height="40"
                           Margin="8,4"
                           Style="{StaticResource BaseTextBlockStyle}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Margin="4,4,4,8" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" >
            <GridView x:Name="gridMosaics"
                      ItemsSource="{x:Bind ViewModel.MosaicDS.DataSource}"
                      SelectedItem="{x:Bind ViewModel.MosaicDS.CurrentItem, Mode=TwoWay, Converter={StaticResource ObjectToMosaicDataItemConverter}}"
                      ItemTemplate="{StaticResource TailTemplate}"
                      IsItemClickEnabled="True"
                      SelectionMode="Single"
                      SelectionChanged="OnMosaicItemSelectionChanged"
                      ItemClick="OnMosaicItemClick"
                      DoubleTapped="OnMosaicItemDoubleClick" />
        </ScrollViewer>

        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,14,12" Background="{x:Bind BorderColorStartBttn, Mode=OneWay}" >
            <Grid Background="WhiteSmoke" Margin="5,5,5,5">
                <Button x:Name="bttnBeginGame"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Click="OnClickBttnStartGame"
                        IsEnabled="{x:Bind gridMosaics.SelectedItem, Mode=OneWay, Converter={StaticResource SelectedItemToBoolConverter}}"
                        Content="Start Game" AutomationProperties.Name="Play" ToolTipService.ToolTip="just do it!"
                />
            </Grid>
        </Grid>
    </Grid>

</Page>
